               <head>Bernard of Clairvaux; 14th century, first half</head>
               <msContents>
                  <msItem xml:id="MS_Laud_Misc_212-item1" n="1">
                     <locus>(fols. 2-215<hi rend="superscript">b</hi>v)</locus>
                     <author key="person_59875293">Bernard of Clairvaux</author>
                     <author key="person_306415749">Ps.-Bernard of Clairvaux</author>
                     <title key="work_1057">works</title>
                     <textLang mainLang="la">Latin</textLang>
                     <msItem n="1.1">
                        <locus>(fols. 2-50)</locus>
                        <title>De consideratione libri quinque</title>
                        <rubric>Incipit liber primus domni Bernardi abbatis Clarevallensis de consideratcione ad Eugenium papam</rubric>
                        <finalRubric>Explicit liber quintus et ulitmus beati Bernhardi abbatis de consideratione</finalRubric>
                     </msItem>
                     <msItem n="1.2">
                        <locus>(fols. 50-54v)</locus>
                        <title>Sermo de amore Dei</title>
                        <incipit>Verbum mihi ad te, rex seculorum Christe Jhesu. Ausu caritatis </incipit>
                     </msItem>
                     <msItem n="1.3">
                        <locus>(fols. 54v-56)</locus>
                        <title>Quare spiritales homines non percipiant gratiam</title>
                        <incipit>Quinque sunt impedimenta, quare spirtales homines </incipit>
                     </msItem>
                     <msItem n="1.4">
                        <locus>(fols. 56-59v)</locus>
                        <title>Sermo ad Novitios</title>
                        <incipit>In via estis, fratres, que ducit ad vitam, in via recta et inpolluta </incipit>
                     </msItem>
                     <msItem n="1.5">
                        <locus>(fols. 60-74v)</locus>
                        <title>Sermo exhortatorius ad milites Templi</title>
                        <finalRubric>Exlicit sermo exhortacionis beati Berenhardi ad milites Templi.</finalRubric>
                     </msItem>
                     <msItem n="1.6">
                        <locus>(fols. 75-93)</locus>
                        <title>De gratia et libero arbitrio ad Gulielmum, abbatem S. Theoderici</title>
                        <note>with a prologue</note>
                        <title>Incipit liber beti Bernhardi de libero arbitrio</title>
                        <finalRubric>Explicit de libero arbitrio.</finalRubric>
                     </msItem>
                     <msItem n="1.7">
                           <locus>(fols. 93-109r; 109v blank)</locus>
                           <title>De informatione morum</title>
                           <rubric>Incipipt liber ejusdem de informacione morum</rubric>
                           <incipit>Hortatur quidem timidam mentis mei impericiam </incipit>
                     </msItem>
                     <msItem n="1.8">
                        <locus>(fols. 110-126v)</locus>
                        <title>De diligendo Deum ad Haimericum</title>
                        <note>with a prologue</note>
                        <rubric>Incipit prologus beati Bernhardi abbatis in librum de diligendo Deum</rubric>
                        <finalRubric>Explicit liber de diligendo Deum</finalRubric>
                     </msItem>
                     <msItem n="1.9">
                           <locus>(fols. 126v-146)</locus>
                           <title>De gradibus humilitatis et superbiae, praevia Retractatione</title>
                           <finalRubric>Explicit apologia beati Bernardi abbatis ad Wilhelmum abbatem.</finalRubric>
                     </msItem>
                     <msItem n="1.10">
                           <locus>(fols. 146-157)</locus>
                           <title>Apologia ad Wilhelmum, abbatem S. Theoderici</title>
                           <finalRubric>Explicit apologia beati Bernardi abbatis ad Wilhelmum abbatem</finalRubric>
                     </msItem>
                     <msItem n="1.11">
                           <locus>(fols. 157-160)</locus>
                           <rubric>Tractatus beati Bernardi abbatis de confessione</rubric>
                           <incipit>Corde creditur ad iusticiam, ore autem confessio fit ad salutem. Dicit enim scriptura Omnis qui credit </incipit>
                     </msItem>
                     <msItem n="1.12">
                        <locus>(fols. 160-179v)</locus>
                        <title>Homiliae quatuor super <hi rend="italic">Missus est</hi></title>
                        <note>with a preface</note>
                     </msItem>
                     <msItem n="1.13">
                        <locus>(fols. 180-186v)</locus>
                        <title>Tractatus beati Bernardi de scala Claustralium</title>
                        <rubric>Incipit tractatus beati Bernardi de scala Claustralium</rubric>
                     </msItem>
                     <msItem n="1.14">
                        <locus>(fols. 186v-191)</locus>
                        <title>De collocutione animae et corporis</title>
                        <incipit>Corpus meum longo languore torquetur </incipit>
                     </msItem>
                     <msItem n="1.15">
                        <locus>(fols. 191-194v; 194<hi rend="superscript">b</hi> rv blank)</locus>
                        <title>Liber de amore excitante animam per amorem</title>
                        <incipit>Amor sic alloquitur animam </incipit>
                     </msItem>
                     <msItem n="1.16">
                        <locus>(fols. 195-215<hi rend="superscript">b</hi>)</locus>
                        <title>Liber de praecepto et dispensatione</title>
                        <note>with a prologue</note>
                        <note>fol. 215<hi rend="superscript">b</hi> mutilated, text mostly lacking.</note>
                     </msItem>
                  </msItem>
               </msContents>
